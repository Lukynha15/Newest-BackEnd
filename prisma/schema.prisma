generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  password String
  createdAt DateTime @default(now())
  avatar  String?

  posts   Post[]
}

model Post {
  id      Int     @id @default(autoincrement())
  title   String
  content String
  likes   Int     @default(0)
  comments Comment[]
  createdAt DateTime @default(now())

  authorId Int
  author   User    @relation(fields: [authorId], references: [id])
}

model Comment {
  id      Int     @id @default(autoincrement())
  content String
  post    Post    @relation(fields: [postId], references: [id])
  postId  Int
  createdAt DateTime @default(now())
}